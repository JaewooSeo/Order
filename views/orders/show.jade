extends ../layout

block content
    div(class="main")
        h1 주문하기
        div(class="panel panel-default")
            div(class="panel-heading")
                b #{menu.name}
            div(class="panel-body")
                a(href="/images/menus/" + menu.image)
                    img(src="/images/menus/" + menu.image class="img-responsive img-rounded")
                p #{menu.desc}
            table(class="table")
                thead
                    tr
                        th
                            | 주문 목록
                tbody
                    if order.order 
                        each names, item in order.orderMap
                            tr
                                td
                                    b(class="text-primary") #{item}
                                    |  (#{names.join(', ')}) #{names.length}
                    tr
                        td
                            form(role="form" method="post" action="/orders/" + order._id + "/order")
                                table(width="100%")
                                    tr
                                        td
                                            input(type="text" class="form-control input-sm" name="name" placeholder="이름")
                                        td(width="5px")
                                        td(width="70%")
                                            input(type="text" class="form-control input-sm" name="item" placeholder="메뉴")
                                        td(width="5px")
                                        td(width="1px")
                                            button(type="submit" class="btn btn-default btn-sm") 주문
